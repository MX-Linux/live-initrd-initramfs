#!/bin/sh

prog=${1:-/bin/sh}

[ $# -gt 0 ] && shift

mkdir -p /run/initramfs/sys /run/initramfs/proc /run/initramfs/dev

mountpoint -q /run/initramfs/sys  || mount --bind /sys  /run/initramfs/sys
mountpoint -q /run/initramfs/proc || mount --bind /proc /run/initramfs/proc
mountpoint -q /run/initramfs/dev  || mount --bind /dev  /run/initramfs/dev

chroot /live $prog "$@"

umount /run/initramfs/dev
umount /run/initramfs/sys
umount /run/initramfs/proc

